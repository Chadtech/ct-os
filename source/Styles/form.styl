.field
    margin-bottom 4px
    margin-top 4px

    p
        display inline-block
        width 192px
        text-align left
    
    input
        background backgroundx2
        border-top 2px solid ignorable3
        border-left 2px solid ignorable3
        border-right 2px solid ignorable1
        border-bottom 2px solid ignorable1
        
        font-size 2em
        font-family hfnss
        color pointColor
        -webkit-font-smoothing none
        margin 0
        padding 0
        
        outline none
    
.tungsten
    p
        width 41px
        
    input
        width calc(100% - 58px)

.error-zone
    height 1em
    background lowWarning
    padding 4px
