.card
    background ignorable2
    border-top 2px solid ignorable1
    border-left 2px solid ignorable1
    border-right 2px solid ignorable3
    border-bottom 2px solid ignorable3    
    position absolute  

    &.solitary
        width 500px
        top 50%
        left 50%
        transform translate(-50%, -50%)
        padding-top 40px
        padding-bottom 40px
        position absolute
        text-align center
    
      &.register
          width 600px
        
      &.register-success
          width 520px
          padding-left 40px
          padding-right 40px
          
          p
            text-align left
            margin-bottom 0px
    
.card-body
    padding 8px
    padding-top 0px
    width 100%
    height 100vh


.title
    background pointColor
    width calc(100% - 8px)
    margin 2px
    padding 2px
    cursor default
    
    p
        color ignorable3
        -webkit-user-select none
        -moz-user-select none
        -ms-user-select none
        user-select none
        cursor default